<!doctype html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{{title}}</title>
    <meta name="description" content="{{description}}">
    <meta name="author" content="Mass Relevance">
    <meta name="viewport" content="width=device-width">
    <meta property="og:title" content="{{title}}"/>
    <meta property="og:description" content="{{description}}"/>

    <!-- ADD IN FULL PATH TO SHARE ICON -->
    <meta property="og:image" content=""/>

    <base target="_blank" />

    <!-- CSS -->
    <link href="./css/main.css" rel="stylesheet" />

    <script src="./js/vendor/modernizr.js"></script>

    {{#if ga.enabled}}
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '{{ga.code}}']);
      _gaq.push(['_trackPageview']);
      {{#if ga.alt_code}}
      _gaq.push(['b._setAccount', '{{ga.alt_code}}']);
      _gaq.push(['b._trackPageview']);
      {{/if}}

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    {{/if}}
  </head>
  <body>

    <div id="stream" data-stream-name="{{stream_name}}" class="stream"></div>

    <!-- TEMPLATES -->
    <script id="tmpl-status-twitter" type="text/x-handlebars-template">
      {{{include "templates/status-twitter.html.hbs"}}}
    </script>

    <!-- SCRIPTS -->
    <script src="./js/vendor/require.js"></script>
    <script>
      {{{include "js/config/require.config.js.hbs"}}}
    </script>

  </body>
</html>
