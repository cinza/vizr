<div class="massrel-status massrel-status-facebook {{status_css}}{{#each types}} massrel-status-type-{{this}}{{/each}}" data-massrel-network="fb" data-massrel-id="{{status.facebook_id}}">
  {{#if config.type_markers}}
  <div class="massrel-status-type-marker"></div>
  {{/if}}
  <a href="https://www.facebook.com/profile.php?id={{status.from.id}}&v=wall" class="massrel-avatar"><img src="//graph.facebook.com/{{status.from.id}}/picture" alt="" /></a>
  <div class="massrel-content">
    <a href="https://www.facebook.com/profile.php?id={{status.from.id}}&v=wall" class="massrel-permalink massrel-permalink-facebook">
      <span class="massrel-permalink-created-at" title="{{formattedDate.full}}">
        <span data-date="{{formattedDate.timestamp}}">{{formattedDate.display}}</span><i class="massrel-permalink-logo massrel-permalink-logo-facebook icon-facebook-logo"></i>
      </span>
    </a>
    <div class="massrel-author">
      <a href="https://www.facebook.com/profile.php?id={{status.from.id}}&v=wall" class="massrel-primary-name">{{status.from.name}}</a>
    </div>
    <div class="massrel-text">{{{autoLink status.message}}}<!--{{#if status.link}} <a href="{{status.link}}">{{status.link}}</a>{{/if}}--></div>
    <div class="massrel-meta">
      {{#if config.full_details}}
      <span class="massrel-details">
        <a href="https://www.facebook.com/profile.php?id={{status.from.id}}&v=wall" class="massrel-details-created-at" title="{{formattedDate.full}}"><i class="massrel-details-logo massrel-details-logo-facebook icon-facebook-logo"></i>{{formattedDate.full}}</a>
      </span>
      {{else}}
      {{#if config.details_link}}
      <a href="https://www.facebook.com/profile.php?id={{status.from.id}}&v=wall" class="massrel-details">Details</a>
      {{/if}}
      {{/if}}
    </div>
  </div>
</div>
