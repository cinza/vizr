.massrel-status
  font-size: 12px;
  padding:10px
  border-bottom: solid 1px #e8e8e8
  
  a
    text-decoration: none
    outline: none
    
    &:hover
      text-decoration: underline
      
    img
      border: 0
      
  .massrel-avatar,
  .massrel-avatar img
    width: 48px
    height: 48px
    
  .massrel-avatar
    display: block
    float: left
    
  .massrel-content
    margin-left: 58px
    word-wrap: break-word
    
  .massrel-author
    margin-bottom: 3px
    position: relative
    
    .massrel-screen-name
      color: #999
      font-size: 14px
      font-weight: bold
    
    .massrel-retweeted-by
      top: 0
      right: 0
      position: absolute
      display: inline
  
  .massrel-text
    line-height: 1.5
    
  .massrel-meta
    margin-top: 5px
    font-size: 11px
    
    a
      color: #999
      
      &:hover
        color: #000
        
    .massrel-permalink
      display: inline
    
    .massrel-source-logo
      margin-right: 3px
      
      img
        width: 16px
        height: 16px
        vertical-align: top
    
    .massrel-intents
      display: none
  
      .massrel-intent
        display: inline-block
        min-height: 16px
        margin-left: 5px
        padding-left: 17px
        background-repeat: no-repeat
        background-position: 0 -2px
        
      .massrel-intent-reply
        background-image: url(../img/reply.png)
        
        &:hover
          background-image: url(../img/reply_hover.png)
        
      .massrel-intent-retweet
        background-image: url(../img/retweet.png)
        
        &:hover
          background-image: url(../img/retweet_hover.png)
        
      .massrel-intent-favorite
        background-image: url(../img/favorite.png)
        
        &:hover
          background-image: url(../img/favorite_hover.png)
      
  &:hover .massrel-intents
    display: inline

.massrel-narrow 
    
  .massrel-avatar,
  .massrel-avatar img
    width: 32px
    height: 32px
    
  .massrel-content
    margin-left: 38px
  
  .massrel-screen-name
    font-size: 12px
  
  .massrel-real-name
    font-size: 11px
    
  .massrel-retweeted-by
    margin-left:7px
    position:static
    top:0
    right:0
    background-color:transparent
    
  .massrel-text
    line-height: 17px
    
  .massrel-intents
    margin-bottom: 3px
    display: block;
    
    .massrel-intent
      margin-right: 5px
      margin-left: 0
      
  &:hover .massrel-intents
    display: block;