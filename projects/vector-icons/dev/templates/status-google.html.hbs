<div class="massrel-status massrel-status-google {{status_css}}{{#each types}} massrel-status-type-{{this}}{{/each}}" data-massrel-network="ggl" data-massrel-id="{{status.id}}">
  {{#if type_markers}}
  <div class="massrel-status-type-marker"></div>
  {{/if}}
  <a href="{{status.actor.url}}" class="massrel-avatar">
    <img src="{{status.actor.image.url}}" alt="" />
  </a>
  <div class="massrel-content">
    {{#if config.permalink}}
    <a href="{{status.url}}" class="massrel-permalink">
      <span class="massrel-permalink-created-at" title="{{formattedDate.full}}">
        <span data-date="{{formattedDate.timestamp}}">{{formattedDate.display}}</span><i class="massrel-permalink-logo massrel-permalink-logo-google icon-google-plus-logo"></i>
      </span>
    </a>
    {{/if}}
    <div class="massrel-author">
      <a href="{{status.actor.url}}" class="massrel-primary-name">{{status.actor.displayName}}</a>
    </div>
    <div class="massrel-text">{{{autoLink status.title}}}</div>

    <div class="massrel-meta">
      {{#if config.full_details}}
      <span class="massrel-details">
        <a href="{{status.url}}" class="massrel-details-created-at" title="{{formattedDate.full}}"><i class="massrel-details-logo massrel-details-logo-google icon-google-plus-logo"></i>{{formattedDate.full}}</a>
        {{#if config.location}}
        {{#if status.location}}
        <a href="{{status.url}}" class="massrel-place">from {{status.location.name}}</a>
        {{/if}}
        {{/if}}
      </span>
      {{else}}
      {{#if config.location}}
      {{#if status.location}}
      <a href="{{status.url}}" class="massrel-details massrel-place"><i class="massrel-place-icon icon-place"></i>from {{status.location.name}}</a>
      {{else}}
      {{#if config.details_link}}<a href="{{status.url}}" class="massrel-details">Details</a>{{/if}}
      {{/if}}
      {{else}}
      {{#if config.details_link}}<a href="{{status.url}}" class="massrel-details">Details</a>{{/if}}
      {{/if}}
      {{/if}}
    </div>

  </div>
</div>
