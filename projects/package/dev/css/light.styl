.light
  .bird
    background url(../img/light/bird.png)

  .button
    color #fff
    font 16px/1.3 'Helvetica Neue',Helvetica,Arial,sans-serif
    font-weight 500
    text-shadow 0 -1px 1px rgba(0,0,0,.28)

    // from vector shape
    -moz-border-radius 11px
    -webkit-border-radius 11px
    border-radius 11px
    // prevents bg color from leaking outside the border
    -moz-background-clip padding
    -webkit-background-clip padding-box
    background-clip padding-box
    // layer fill content
    background-color #d5dddd
    // drop shadow / inner glow
    -moz-box-shadow 0 1px 1px rgba(23,23,23,.33), inset 0 0 0 1px rgba(205,239,252,.2)
    -webkit-box-shadow 0 1px 1px rgba(23,23,23,.33), inset 0 0 0 1px rgba(205,239,252,.2)
    box-shadow 0 1px 1px rgba(23,23,23,.33), inset 0 0 0 1px rgba(205,239,252,.2)
    // gradient fill
    background-image url('dataimage/svg+xmlbase64,')
    background-image -moz-linear-gradient(90deg, rgba(93,135,161,.65) 0%, rgba(170,199,209,.65) 100%)
    background-image -o-linear-gradient(90deg, rgba(93,135,161,.65) 0%, rgba(170,199,209,.65) 100%)
    background-image -webkit-linear-gradient(90deg, rgba(93,135,161,.65) 0%, rgba(170,199,209,.65) 100%)
    background-image linear-gradient(90deg, rgba(93,135,161,.65) 0%, rgba(170,199,209,.65) 100%)
