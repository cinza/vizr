.dark
  .bird
    background url(../img/dark/bird.png)

  .button
    color #fff
    font 16px/1.3 'Helvetica Neue',Helvetica,Arial,sans-serif
    font-weight 500
    text-shadow 0 -1px 1px rgba(0,0,0,.28)

    // from vector shape
    -moz-border-radius 11px
    -webkit-border-radius 11px
    border-radius 11px 
    // prevents bg color from leaking outside the border
    -moz-background-clip padding
    -webkit-background-clip padding-box
    background-clip padding-box 
    // layer fill content
    background-color #5d9bcf 
    // drop shadow / outer stroke
    -moz-box-shadow 0 2px 2px rgba(0,0,0,.75), 0 0 0 1px #426f95
    -webkit-box-shadow 0 2px 2px rgba(0,0,0,.75), 0 0 0 1px #426f95 
    box-shadow 0 2px 2px rgba(0,0,0,.75), 0 0 0 1px #426f95
    // gradient fill
    background-image url('dataimage/svg+xml;base64,')
    background-image -moz-linear-gradient(90deg, rgba(48,96,136,.68) 0%, rgba(93,155,207,.68) 100%)
    background-image -o-linear-gradient(90deg, rgba(48,96,136,.68) 0%, rgba(93,155,207,.68) 100%)
    background-image -webkit-linear-gradient(90deg, rgba(48,96,136,.68) 0%, rgba(93,155,207,.68) 100%)
    background-image linear-gradient(90deg, rgba(48,96,136,.68) 0%, rgba(93,155,207,.68) 100%) 
